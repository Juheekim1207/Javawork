<script type="text/javascript">
	$(function() {
		list();	//처음 시작시 목록 출력
		//저장 이벤트
		$(".btnsave").click(function(){
			//폼 전체 데이터를 읽어서 insert.jsp로 보낸다
			//성공후 list() 다시 호출후, 입력값 초기화
			var fdata = $("#frm").serialize();
			$.ajax({
				type: "post",
				dataType: "html",
				data: fdata,
				url: "insert.jsp",
				success:function(){
					list();
					$("#writer").val("");
					$("#pass").val("");
					$("#content").val("");
					
					$("#avata").val("1");
					$("#img.imgphoto").removeClass("select");
					$("#img.imgphoto:first").addClass("select");
				}
			});
		});
		
		//삭제 이벤트
		$(document).on("click","span.del",function(){
			var num = $(this).attr("num");
			//비번 입력
			var pass = prompt("이 글에 대한 비밀번호를 입력해주세요");
			console.log(num + "," + pass);
			//취소 클릭시 함수 종료
			if(pass == null) {
				return;
			}
			
		});
		
	}); //$function close
	
	function list()
	{
		$.ajax({
			type: "get",
			dataType: "json",
			url: "list.jsp",
			success: function(data){
				var s =" ";
				$.each(data, function(i, elt) {
					s += "<table class='table'>";
					s += "<tr><td>";
					s += "<b>" + elt.writer + "</b>";
					s += "<span class='mod' num=" +elt.num + ">수정</span>";
					s += "<span class='del' num=" +elt.num + ">삭제</span>";
					s += "<span class='day'>" +elt.writeday + "</span>";
					s += "</td></tr>";
					
					s += "<tr><td>";
					s += "<img src='../avata/s" + elt.avata +".JPG' class='avata' align='left' hspace=20>";
					s += "<pre>" + elt.content + "</pre>";
					
					s += "</td></tr>";
					s += "</table><br><br>";
				});
				
				$("div.list").html(s);
			}
		});
	}
</script>
