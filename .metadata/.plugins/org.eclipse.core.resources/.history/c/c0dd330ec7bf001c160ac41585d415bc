<script type="text/javascript">
	$(function() {
		list();//처음 로딩시 호출
	});
	
	function list(){
		$.ajax({
			type:"get",
			dataType:"json",
			url:"stutojson.jsp",
			success:function(data){
				var s = "";
				s += "<table class='table table-bodered'>";
				s += "<tr><th>번호</th>";
				s += "<th>이름</th><th>사진</th><th>핸드폰</th>"
					 + "<th>주소</th><th>작성일</th></tr>";				
			
			 	$.each(data, function(i, n){
			 		s += "<tr class='tr'>";
			 		s += "<td>" + n.num + "</td>";
			 		s += "<td>" + n.name + "</td>";
			 		s += "<td><img src='" + n.photo + "'></td>";
			 		s += "<td>" + n.hp + "</td>";
			 		s += "<td>" + n.addr + "</td>";
			 		s += "<td>" + n.writeday + "</td>";
			 		s += "</tr>";
			}); 	
			s += "</table>";
			$(".stu").html(s);
			}

	});
}
</script>

